{
  "manifest_version": 3,
  "name": "Pentest Deepfake & Phishing Detector",
  "version": "1.0",
  "description": "A browser extension for detecting deepfakes and phishing attempts.",
  "permissions": [
    "http://localhost:5000/*",  
    "http://127.0.0.1:5000/*"  
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}